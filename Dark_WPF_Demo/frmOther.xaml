<Window x:Class="Dark_WPF_Demo.frmOther"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dark_WPF_Demo"
        mc:Ignorable="d"
        Title="frmOther" 
        WindowStartupLocation="CenterScreen" 
        Height="500" Width="500">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <TextBlock Text="Dòng:"
                           Width="50"/>
                <TextBox Name="txtRow" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5 0 5 5">
                <TextBlock Text="Cột:"
                           Width="50"/>
                <TextBox Name="txtColumn" Width="100"/>
            </StackPanel>
            <Button Name="btnCreate"
                Width="50" Height="auto">Create</Button>
        </StackPanel>
        <GroupBox Name="gb" 
                  Height="460" Width="315"
                  VerticalAlignment="Top" Grid.Column="1" />
    </Grid>
</Window>
